{
    "manifest_version": 2,
    "name": "Simple Extension",
    "version": "1.0",
    "description": "A basic Chrome extension",
    "browser_action": {
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
      "default_popup": "popup.html",
      "default_title": "Click me!"
    },
    "permissions": ["activeTab"]
  }