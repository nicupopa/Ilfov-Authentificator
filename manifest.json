
{
    "manifest_version": 2,
    "name": "BetterLogIn",
    "version": "1.0",
    "description": "Your extension description",
    "browser_action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "permissions": [
      "storage"
    ],
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "web_accessible_resources": [
      "popup.html",
      "popup.js"
    ]
  }